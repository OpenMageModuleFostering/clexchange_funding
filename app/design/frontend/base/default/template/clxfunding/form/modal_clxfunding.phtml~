<script type="text/javascript">
    jQuery(document).ready(function () {
        Validation.add('validate-alpha-spac', 'Allowed only alphabets', function (v) {
            return Validation.get('IsEmpty').test(v) || /^[a-zA-Z ]+$/.test(v)
        });
    });
</script>


